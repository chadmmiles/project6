<!doctype html>
<html>
    <head>
      	<link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
        <title>My App</title>
    </head>
    <body>
        <div class="container" id="main">
      <div class="row">
        <div class="col-md-12">

          <%= yield %>
          
        </div>
      </div>
        <div class="row">
           <div class="col-md-6">
              <h2>Current Holidays</h2>
                <% @holidayscurrent.each do |holiday| %>
                  <ul>
                    <% holiday.each do |x| %>
                    <li><%= x['name'] %> : <%=x['date'] %></li>
                    <% end %>
                  </ul>
              <% end %>
           </div>
           <div class="col-md-6">
              <h2>Holidays From By Birth Month</h2>
               <% @holidaysdob.each do |holiday| %>
                  <ul>
                    <% holiday.each do |x| %>
                    <li><%= x['name'] %> : <%=x['date'] %></li>
                    <% end %>
                  </ul>
              <% end %>
           </div>
        </div>
    </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>

    </body>
</html>